<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LocationBtnStyle">
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:src">@drawable/ic_location</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">8dp</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/trip_accent_color</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:elevation">10dp</item>
    </style>


    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:elevation">8dp</item>
        <item name="boxStrokeColor">#E0E0E0</item>
    </style>

</resources>